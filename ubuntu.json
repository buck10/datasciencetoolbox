{
    "variables": {
        "ansible_host": "docker",
        "ansible_connection": "docker"
    },
    "sensitive-variables": [
        "docker_hub_password"
    ],
    "builders": [
        {
            "name": "docker",
            "type": "docker",
            "image": "ubuntu:22.04",
            "commit": true,
            "changes": [
                "USER dst",
                "WORKDIR /home/dst"
            ],
            "run_command": [ "-d", "-i", "-t", "--name", "{{user `ansible_host`}}", "{{.Image}}", "/bin/bash" ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": ["echo \"{{ isotime \"20060102\" }}\" > /tag"],
            "only": ["docker"]
        },
        {
            "type": "shell",
            "script": "./pre_ansible_setup.sh",
            "only": ["docker"]
        },
        {
            "type": "ansible",
            "playbook_file": "./playbook-tools.yml",
            "extra_arguments": [
                "--skip-tags=pydata",
                "--extra-vars",
                "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
            ],
            "only": ["docker"]
        },
        {
            "type": "ansible",
            "playbook_file": "./playbook-user.yml",
            "extra_arguments": [
                "--extra-vars",
                "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
            ],
            "only": ["docker"]
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "bbqbrewer/dsatcl2e",
                "tags": ["latest", "{{ isotime \"20060102\" }}"],
                "force": true,
                "only": ["docker"]
            },
            {
                "type": "docker-push",
                "login": true,
                "login_server": "docker.io",
                "login_username": "bbqbrewer",
                "login_password": "{{user `docker_hub_password`}}",
                "keep_input_artifact": false,
                "only": ["docker"]
            }
        ]
    ]
}
